  - '204'
  - '503'
  - "208"  # File permissions not mentioned
  - filenotfounderror
#   - skip_this_tag
#   - and_this_one_too
#   - skip_this_id
# tags:
#   - run_this_tag
warn_list:  # or 'skip_list' to silence them completely
  - yaml  # Violations reported by yamllint
use_default_rules: true
# verbosity: 1

# Offline mode disables installation of requirements.yml
offline: true
